{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@utils": ["utils"]
      }
    }
  },
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es2015",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@utils": ["utils"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.json", "jest.config.js"]
}

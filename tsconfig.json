{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@utils": ["utils"]
      }
    }
  },
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@utils": ["utils"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
